@page
@model MascotasEnCasa.App.Presentacion.Pages.Pacientes.IndexModel
@{
}

<div class="title1"><h1>Lista de Pacientes</h1></div> <br>

<a class="btn btn-primary" asp-page ="./Inicio">Volver </a>

<br>

<br>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Raza</th>
            <th scope="col">Peso</th>
            <th scope="col">Color</th>
            <th scope="col">Edad</th>
            <th scope="col">Genero</th>
            <th scope="col">Direccion</th>
            <th scope="col">Latitud</th>
            <th scope="col">Longitud</th>
            <th scope="col">Ciudad</th>
            <th scope="col">Registrar Signo Vital</th>
            <th scope="col">Actualizar</th>
            <th scope="col">Eliminar</th>


        </tr>
    </thead>

    @foreach (var p in @Model.Pacientes)
    {
        <tr>
            <td>@p.Nombre</td>
            <td>@p.Raza</td>
            <td>@p.Peso</td>
            <td>@p.Color</td>
            <td>@p.Edad</td>
            <td>@p.Sexo</td>
            <td>@p.Direccion</td>
            <td>@p.Latitud</td>
            <td>@p.Longitud</td>
            <td>@p.Ciudad</td>
            <td><a class="btn btn-secondary" asp-page="./SignoVital" asp-route-id=@p.Id>Signo Vital</a> </td>
            <td><a class="btn btn-secondary" asp-page="./Actualizar" asp-route-id=@p.Id>Actualizar</a> </td> 
            <td><a class="btn btn-secondary" asp-page="./Eliminar" asp-route-id=@p.Id>Eliminar</a> </td>
            

        </tr>
    }


</table>